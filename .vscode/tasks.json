{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "test",
                "--project",
                "${workspaceFolder}/${input:projectName}/${input:projectName}.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "projectName",
            "type": "promptString",
            // type specific configuration attributes
            "description": "Which project to run the tests for, e.g. day1",
            "default": "day2"
        }
    ]
}